unit DateTimeTransformUnit;

interface

uses SysUtils;
 function IntToDateTimeStr(Number :integer) :string;

implementation

function IntToDateTimeStr(Number :integer) :string;
var
i :integer;
begin
  i := Number div 3600;
  if i < 10 then result :=  '0' + IntToStr (i) + ':'
            else result := IntToStr (i) + ':';
  i := Number  div 60;
  if i < 10 then result :=  result + '0' + IntToStr (i) + ':'
            else result := result + IntToStr (i) + ':';

  i := Number  mod 60;
  if i < 10 then result :=  result + '0' + IntToStr (i)
            else result := result + IntToStr (i);


end;

end.
